@model IEnumerable<CDP.Models.Talhoes>

@{
    ViewData["Title"] = "Index";
}

<h1><i class="bi bi-grid-3x3-gap-fill me-2">Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localizacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoSolo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CultivarAnterior)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdFazenda)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localizacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoSolo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CultivarAnterior)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdFazenda)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTalhao">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdTalhao">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTalhao">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
