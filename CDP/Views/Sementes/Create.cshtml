@model CDP.Models.Semente

@{
    ViewData["Title"] = "Nova Semente";
}

<div class="container-fluid px-4">
    <div class="row border-bottom mt-2 md-4">
        <div class="col-lg-10 col-sm-6">
            <h2 class="" style="font-weight:bolder">
                <i class="bi bi-person-plus m-1"></i>@ViewData["Title"]
            </h2>
        </div>
    </div>
    <form asp-action="Create">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Cultura" class="control-label"></label>
                <select asp-for="Cultura" asp-items="Html.GetEnumSelectList<Cultura>()" class="form-select"></select>
                <span asp-validation-for="Cultura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resistencia" class="control-label"></label>
                <input asp-for="Resistencia" class="form-control" />
                <span asp-validation-for="Resistencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Maturacao" class="control-label"></label>
                <input asp-for="Maturacao" class="form-control" />
                <span asp-validation-for="Maturacao" class="text-danger"></span>
            </div>
        </div>

        <div class="flex-column mt-4">
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
            <input type="submit" value="Cadastrar" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
