@{
    ViewData["Title"] = "Dashboard";
}
@{
    var lowPriority = ViewBag.lowPriority;
    var normalPriority = ViewBag.normalPriority;
    var highPriority = ViewBag.highPriority;
    var concludedPriority = ViewBag.concludedPriority;
    var plantio = ViewBag.plantio;

    var safraData = ViewBag.safraData;
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">@ViewData["Title"]</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Notificações</li>
            </ol>
            <div class="row">
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-primary text-white mb-4">
                        <div class="card-body">Resolvidas</div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <a class="small text-white stretched-link" href="#">View Details</a>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6">
                    <div class="card bg-success text-white mb-4">
                        <div class="card-body">
                            @foreach (var item in lowPriority)
                            {
                                <dl class="row">
                                    <dt>@item.Name</dt>
                                    <dd>@item.Description</dd>
                                    <dd>--------------------------------</dd>
                                </dl>
                            }
                            <div class="card-footer d-flex align-items-center justify-content-between">
                                <a class="small text-white stretched-link" href="#">View Details</a>
                                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6">
                    <div class="card bg-warning text-white mb-4">
                        <div class="card-body">
                            @foreach (var item in normalPriority)
                            {
                                <dl class="row">
                                    <dt>@item.Name</dt>
                                    <dd>@item.Description</dd>
                                    <a asp-action="~\Views\Avisos\Details" asp-route-id="@item.Id">Detalhes</a>
                                </dl>
                            }
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6">
                    <div class="card bg-danger text-white mb-4">
                        <div class="card-body">Prioridade Alta</div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <a class="small text-white stretched-link" href="#">View Details</a>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-area me-1"></i>
                            Área Plantada nas Ultimas Safras
                        </div>
                        <div class="card-body"><canvas id="myAreaChart" width="100%" height="40"></canvas></div>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-bar me-1"></i>
                            Produtiviadade
                        </div>
                        <div class="card-body"><canvas id="myBarChart" width="100%" height="40"></canvas></div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-area me-1"></i>
                            Chart Test
                        </div>
                        <div class="card-body">
                            <canvas id="myAreaChart2" width="400" height="150"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-bar me-1"></i>
                            Chart Test 2
                        </div>
                        <div class="card-body"><canvas id="myPieChart" width="100%" height="40"></canvas></div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Dados dos Talhões
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Localização</th>
                                <th>Tipo de Plantio</th>
                                <th>Quantidade de Chuva</th>
                                <th>Data de Inicio</th>
                                <th>Cultivar</th>
                                <th>Quantidade de Sementes</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Nome</th>
                                <th>Localização</th>
                                <th>Cultivar</th>
                                <th>Tipo de Plantio</th>
                                <th>Data de Inicio</th>
                                <th>Quantidade de Sementes</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @*@foreach (var item in plantio)
                            {
                                <tr>
                                    <td>@item.Plantio.Talhao.Nome</td>
                                    <td>@item.Plantio.Safra</td>
                                    <td>@item.Cultura</td>
                                    <td>@item.TipoPlantio</td>
                                    <td>@item.DataPlantio</td>
                                    <td>@item.QtdSementes</td>
                                </tr>
                            }*@
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    <script>
        var lineYear = ["2010", "2011", "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019", "2020", "2021", "2022"];
        var lineData = [10000, 30162, 26263, 18394, 18287, 28682, 31274, 33259, 25849, 24159, 32651, 31984, 38451];
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="~/assets/demo/chart-area-demo.js"></script>
    <script src="~/assets/demo/chart-area-demo2.js"></script>
    <script src="~/assets/demo/chart-bar-demo.js"></script>
    <script src="~/assets/demo/chart-pie-demo.js"></script>
    <script src="~/assets/demo/chart-area.js"></script>
    <script src="~/js/datatables-simple-demo.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}