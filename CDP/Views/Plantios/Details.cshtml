@model CDP.Models.Plantio

@{
    ViewData["Title"] = "Detalhes";
}

<div class="container-fluid px-4">
    <div class="row border-bottom mt-2 md-4">
        <div class="col-lg-10 col-sm-6">
            <h2 class="" style="font-weight:bolder">
                <i class="bi bi-person-lines-fill m-1"></i>@ViewData["Title"]
            </h2>
        </div>
    </div>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataPlantio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPlantio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cultura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cultura)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Safra)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Safra)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Chuva)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Chuva)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoPlantio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoPlantio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TempoPlantio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TempoPlantio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UmidadePlantio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UmidadePlantio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sementes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sementes.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QtdSementes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QtdSementes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DistSementes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DistSementes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Adubacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adubacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlantioTalhoes)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in ViewBag.teste)
            {
                <li>@item.Name</li>
            }
        </dd>
    </dl>
    <div class="flex-column mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-primary">Voltar</a>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}