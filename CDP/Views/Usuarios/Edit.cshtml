@model UsuarioFormViewModel

@{
    ViewData["Title"] = "Editar";
}

<div class="container-fluid px-4">
    <div class="row border-bottom mt-2 md-4">
        <div class="col-lg-10 col-sm-6">
            <h2 class="" style="font-weight:bolder">
                <i class="bi bi-person-plus m-1"></i>@ViewData["Title"]
            </h2>
        </div>
    </div>

    <form asp-action="Edit">
        <div class="row mt-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Usuario.Id" />
            <div class="col-md-6">
                <label asp-for="Usuario.Nome" class="control-label"></label>
                <input asp-for="Usuario.Nome" class="form-control" />
                <span asp-validation-for="Usuario.Nome" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Usuario.Email" class="control-label"></label>
                <input asp-for="Usuario.Email" class="form-control" />
                <span asp-validation-for="Usuario.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-4">
                <label asp-for="Usuario.Senha" class="control-label"></label>
                <input asp-for="Usuario.Senha" class="form-control" />
                <span asp-validation-for="Usuario.Senha" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Usuario.Telefone" class="control-label"></label>
                <input asp-for="Usuario.Telefone" class="form-control" />
                <span asp-validation-for="Usuario.Telefone" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Usuario.Celular" class="control-label"></label>
                <input asp-for="Usuario.Celular" class="form-control" />
                <span asp-validation-for="Usuario.Celular" class="text-danger"></span>
            </div>
        </div>


        <div class="row mt-2">
            <div class="col-md-4">
                <div class="">
                    <label asp-for="Usuario.IdCargo" class="control-label"></label>
                    <select asp-for="Usuario.IdCargo" asp-items="@(new SelectList(Model.Cargos,"Id","Descricao"))" class="form-select"></select>
                    <span asp-validation-for="Usuario.IdCargo" class="text-danger"></span>
                </div>
                <div class="form-switch">
                    <label class="form-check-label mt-2">
                        <input class="form-check-input" asp-for="Usuario.Admin" /> @Html.DisplayNameFor(model => model.Usuario.Admin)
                    </label>
                </div>
                <div class="form-switch">
                    <label class="form-check-label mt-2">
                        <input class="form-check-input" asp-for="Usuario.Ativo" /> @Html.DisplayNameFor(model => model.Usuario.Ativo)
                    </label>
                </div>
            </div>
        </div>
        <div>
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
