@model SafraFormViewModel

@{
    ViewData["Title"] = "Nova Safra";
}

<div class="container-fluid px-4">
    <div class="row border-bottom mt-2 md-4">
        <div class="col-lg-10 col-sm-6">
            <h2 class="" style="font-weight:bolder">
                <i class="bi bi-person-plus m-1"></i>@ViewData["Title"]
            </h2>
        </div>
    </div>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Safra.Nome" class="control-label"></label>
            <input asp-for="Safra.Nome" class="form-control" />
            <span asp-validation-for="Safra.Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Safra.Cultura" class="control-label"></label>
            <select asp-for="Safra.Cultura" asp-items="Html.GetEnumSelectList<Cultura>()" class="form-select"></select>
            <span asp-validation-for="Safra.Cultura" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Safra.TalhaoId" class="control-label"></label>
            <select asp-for="Safra.TalhaoId" asp-items="@(new SelectList(Model.Funcionarios,"Id","Nome"))" class="form-select"></select>
            <span asp-validation-for="Safra.TalhaoId" class="text-danger"></span>
        </div>

        <div class="flex-column mt-4">
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
            <input type="submit" value="Cadastrar" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
